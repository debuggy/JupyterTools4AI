{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2017",
        "outDir": "out",
        "lib": [
            "es2017"
        ],
        "sourceMap": true,
        "skipLibCheck": true,
        "rootDir": ".",
        "baseUrl": "./src",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noUnusedLocals": true,
        "plugins": [{ 
            "name": "tslint-language-service",
            "alwaysShowRuleFailuresAsWarnings": false,
            "ignoreDefinitionFiles": true
        }]
    },
    "exclude": [
        "node_modules",
        ".vscode-test",
        "src/scripts"
    ]
}